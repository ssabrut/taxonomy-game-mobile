<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.UserCreatureDetailFragment">

    <ImageView
        android:id="@+id/creature_detail_image"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/creature_detail_common_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/dark_black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/creature_detail_image" />

    <TextView
        android:id="@+id/creature_detail_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/dark_black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/creature_detail_common_name"
        app:layout_constraintStart_toStartOf="@+id/creature_detail_common_name"
        app:layout_constraintTop_toBottomOf="@+id/creature_detail_common_name" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/classification_label"
        android:textColor="@color/dark_black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/creature_detail_description"
        app:layout_constraintStart_toStartOf="@+id/creature_detail_description"
        app:layout_constraintTop_toBottomOf="@+id/creature_detail_description" />

    <TextView
        android:id="@+id/creature_detail_domain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textColor="@color/dark_black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/creature_detail_kingdom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textColor="@color/dark_black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/creature_detail_domain"
        app:layout_constraintStart_toStartOf="@+id/creature_detail_domain"
        app:layout_constraintTop_toBottomOf="@+id/creature_detail_domain" />

    <TextView
        android:id="@+id/creature_detail_phylum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textColor="@color/dark_black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/creature_detail_kingdom"
        app:layout_constraintStart_toStartOf="@+id/creature_detail_kingdom"
        app:layout_constraintTop_toBottomOf="@+id/creature_detail_kingdom" />

    <TextView
        android:id="@+id/creature_detail_class"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textColor="@color/dark_black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/creature_detail_phylum"
        app:layout_constraintStart_toStartOf="@+id/creature_detail_phylum"
        app:layout_constraintTop_toBottomOf="@+id/creature_detail_phylum" />

    <TextView
        android:id="@+id/creature_detail_order"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textColor="@color/dark_black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/creature_detail_class"
        app:layout_constraintStart_toStartOf="@+id/creature_detail_class"
        app:layout_constraintTop_toBottomOf="@+id/creature_detail_class" />

    <TextView
        android:id="@+id/creature_detail_family"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textColor="@color/dark_black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/creature_detail_order"
        app:layout_constraintStart_toStartOf="@+id/creature_detail_order"
        app:layout_constraintTop_toBottomOf="@+id/creature_detail_order" />

    <TextView
        android:id="@+id/creature_detail_genus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textColor="@color/dark_black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/creature_detail_family"
        app:layout_constraintStart_toStartOf="@+id/creature_detail_family"
        app:layout_constraintTop_toBottomOf="@+id/creature_detail_family" />

    <TextView
        android:id="@+id/creature_detail_species"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textColor="@color/dark_black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/creature_detail_genus"
        app:layout_constraintStart_toStartOf="@+id/creature_detail_genus"
        app:layout_constraintTop_toBottomOf="@+id/creature_detail_genus" />

    <androidx.cardview.widget.CardView
        android:id="@+id/creature_detail_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_200"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/creature_detail_evolution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:paddingBottom="16dp"
                android:text="@string/evolution_label"
                android:textColor="@color/dark_black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/creature_detail_expand_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
                app:layout_constraintStart_toEndOf="@+id/creature_detail_evolution"
                app:layout_constraintTop_toTopOf="@+id/creature_detail_evolution" />

            <ScrollView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/creature_detail_evolution">

                <LinearLayout
                    android:id="@+id/creature_evolution_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>